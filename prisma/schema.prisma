generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model blog {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  title        String     @default("")
  description  String     @default("")
  slug         String     @unique()
  focusKeyword String[]   @default([])
  heroImage    heroImage?
  author       String     @default("")
  body         String
  relatedBlogs String[]   @default([])
  published    Boolean    @default(false)
  tags         String[]   @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type heroImage {
  url String
  alt String
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  contact       String?
  state         String?
  country       String?
  courseId      String[]  @default([])
  bundleId      String[]  @default([])
  mentorshipId  String[]  @default([])
  accounts      Account[]
  sessions      Session[]

  Payments Payments[]
  Progress Progress?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Progress {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  course Course[]
  user   User     @relation(fields: [email], references: [email])
}

type Course {
  courseId   String
  chapterIds String[]
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Payments {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  paymentId   String @unique
  email       String
  basePrice   Int //base price
  totalAmount Int

  state          String
  contact        String
  country        String
  currency       Currency       @default(INR)
  paymentGateway PaymentGateway
  paymentMethod  String?
  couponCode     String?        @default("")
  discountAmount Int?           @default(0)
  paymentStatus  PaymentStatus  @default(created)
  purchaseType   PurchaseType

  stripePaymentId   String?
  razorpayPaymentId String?
  razorpayOrderId   String?

  courseId     String?
  bundleId     String?
  mentorshipId String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  User      User      @relation(fields: [email], references: [email])
  Invoices  Invoices?
}

model Invoices {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  invoiceNumber     String         @unique //30dc-3001
  paymentId         String         @unique
  item              String
  itemId            String?
  amount            Int
  currency          Currency       @default(INR)
  paymentGateway    PaymentGateway
  stripePaymentId   String?
  razorpayOrderId   String?
  discountAmount    Int?           @default(0)
  IGST              Int?
  CGST              Int?
  SGST              Int?
  GST               Int?
  paymentGatewayFee Int?           @default(0)

  payments Payments @relation(fields: [paymentId], references: [paymentId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Currency {
  INR
  USD
}

enum PaymentGateway {
  stripe
  razorpay
}

enum PaymentStatus {
  created
  completed
  failed
  refunded
  init_refund
  failed_refund
}

enum PurchaseType {
  course
  bundle
  mentorship
}
